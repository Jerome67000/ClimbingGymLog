<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="fr.jerome.climbinggymlog.activities.LoginActivity"
                android:background="@color/main_color"
                android:orientation="vertical"
                android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/login_titre"
        android:layout_margin="24dp"
        android:layout_gravity="center_horizontal"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#fff9f9f9"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="134dp"
        android:layout_height="123dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login_nom"
        android:layout_gravity="center_horizontal"
        android:hint="Nom"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login_prenom"
        android:layout_gravity="center_horizontal"
        android:hint="PrÃ©nom"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login_num_client"
        android:layout_gravity="center_horizontal"
        android:hint="Num client"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_email"
        android:layout_gravity="center_horizontal"
        android:hint="E-mail"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rock it !"
        android:id="@+id/login_button"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"/>

</LinearLayout>
