<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/fragment_seances"
              android:orientation="vertical"
              android:padding="12dp">

    <FrameLayout
        android:id="@+id/fragment_resume_seance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_light">
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voies_listview"
            android:layout_gravity="start"/>

        <com.shamanland.fab.FloatingActionButton
            android:id="@+id/fap_add_voie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fab_ic_add"
            android:layout_marginBottom="@dimen/floating_action_button_margin_mini"
            android:layout_marginEnd="@dimen/floating_action_button_margin_mini_minus"
            android:layout_marginRight="@dimen/floating_action_button_margin_mini"
            android:layout_gravity="right|bottom"/>
    </FrameLayout>
</LinearLayout>